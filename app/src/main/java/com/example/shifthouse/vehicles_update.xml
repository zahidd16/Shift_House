<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical"
    android:background="@drawable/background1">
    <TextView
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:text="Vehicle Update"
        android:layout_gravity="center"

        android:textSize="40dp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:textColor="#fff"
        android:background="@drawable/shape_background_cute_orange_rounded"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Vehicle ID  : "
            android:textColor="#fff"
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editVeclId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="Description : "
            android:textColor="#fff"
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editVeclDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:inputType="text|textMultiLine"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Date : "
            android:textColor="#fff"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:hint="9/19/2020"
            android:textColor="#fff"
            android:paddingLeft="60dp"
            android:textSize="25dp"
            android:textColorHint="#fff"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:text="Category      : "
            android:textColor="#fff"
            android:textSize="25dp"
            android:textStyle="bold" />
        <Spinner
            android:id="@+id/spinnerVehicleId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        >
        <Button
            android:id="@+id/BackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="back"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textSize="17dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ronded_button1"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/UpdateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="update"
            android:layout_marginLeft="55dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textSize="17dp"
            android:background="@drawable/ronded_button1"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/DetailsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details"
            android:textSize="17dp"
            android:layout_marginLeft="60dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:background="@drawable/ronded_button1"
            android:textStyle="bold"
            />
    </LinearLayout>
</LinearLayout>