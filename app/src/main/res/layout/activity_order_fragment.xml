<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">


    <LinearLayout
        android:layout_margin="16dp"
        android:layout_below="@+id/choose_location_rl"
        android:id="@+id/bill"
        android:background="@drawable/cardview_border2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        >

        <RelativeLayout
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/distance"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="#cfd8dc"
                android:text="Distance"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <TextView
                android:layout_below="@+id/distance"
                android:id="@+id/fare"
                android:padding="16dp"
                android:background="#cfd8dc"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:text="Fare"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <TextView
                android:layout_below="@+id/fare"
                android:id="@+id/driver_cost"
                android:padding="16dp"
                android:background="#cfd8dc"
                android:gravity="center_vertical"
                android:text="Driver Cost"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <TextView
                android:layout_below="@+id/driver_cost"
                android:id="@+id/total_fare"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:background="#cfd8dc"
                android:gravity="center_vertical"
                android:text="Total Fare"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/distances"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="#ffffff"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <TextView
                android:layout_below="@+id/distances"
                android:id="@+id/fr"
                android:padding="16dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <TextView
                android:layout_below="@+id/fr"
                android:id="@+id/dc"
                android:padding="16dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <TextView
                android:layout_below="@+id/dc"
                android:id="@+id/tot"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="420dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Pickup Truck"
            android:paddingLeft="20dp">

        </TextView>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/pckt"
            ></ImageView>
        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:textColor="#fff"
            android:layout_marginLeft="20dp"
            android:background="@drawable/plus"
            android:id="@+id/pta"

            />

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:textColor="#fff"
            android:background="@drawable/minus"
            android:id="@+id/ptm"
            android:layout_marginLeft="20dp"

            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textStyle="bold"
            android:background="#cfd8dc"
            android:textSize="20dp"
            android:id="@+id/pt"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="380dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Pickup Van"
            android:paddingLeft="20dp">

        </TextView>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/pv"
            ></ImageView>
        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:textColor="#fff"
            android:layout_marginLeft="20dp"
            android:background="@drawable/plus"
            android:id="@+id/pva"

            />

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:textColor="#fff"
            android:background="@drawable/minus"
            android:id="@+id/pvm"
            android:layout_marginLeft="20dp"

            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text=""
            android:background="#cfd8dc"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/pv"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="460dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Cargo             "
            android:paddingLeft="20dp">

        </TextView>


        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text=""
            android:background="#cfd8dc"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/co"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>




</RelativeLayout>

